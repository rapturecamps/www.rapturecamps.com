        "cta_text": { "type": "text" },
        "cta_link": { "type": "link" },
        "overlay": { "type": "option", "options": [
          { "name": "Dark", "value": "dark" },
          { "name": "Gradient", "value": "gradient" }
        ]}
      },
      "is_root": false,
      "is_nestable": true
    },
    {
      "name": "stats_section",

        "heading": { "type": "text" },
        "content": { "type": "richtext" },
        "image": { "type": "asset", "filetypes": ["images"] },
        "image_position": { "type": "option", "options": [
          { "name": "left", "value": "left" },
          { "name": "right", "value": "right" },
          { "name": "none", "value": "none" }
        ]}
      },
      "is_root": false,
      "is_nestable": true
    },
    {
      "name": "hero_section",
      "display_name": "Hero Section",

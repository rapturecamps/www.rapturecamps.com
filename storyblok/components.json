    {
      "name": "cta_section",
      "display_name": "CTA Section",
      "schema": {
        "heading": { "type": "text" },
        "description": { "type": "textarea" },
        "background_image": { "type": "asset", "filetypes": ["images"] },
        "primary_cta_text": { "type": "text" },
        "primary_cta_link": { "type": "link" },
        "secondary_cta_text": { "type": "text" },
        "secondary_cta_link": { "type": "link" }
      },
      "is_root": false,

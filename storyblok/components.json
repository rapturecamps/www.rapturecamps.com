      "is_root": false,
      "is_nestable": true
    },
    {
      "name": "contact_page",
      "display_name": "Contact Page",
      "schema": {
        "heading": { "type": "text" },
        "description": { "type": "textarea" },
        "whatsapp_number": { "type": "text" },
        "telegram_link": { "type": "text" },
        "email": { "type": "text" },
        "locations": { "type": "bloks", "restrict_components": true, "component_whitelist": ["contact_location"] }
      },
      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "contact_location",
      "display_name": "Contact Location",
      "schema": {
        "name": { "type": "text" },
        "address": { "type": "textarea" },
        "phone": { "type": "text" },
        "directions": { "type": "richtext" },
        "map_link": { "type": "text" }

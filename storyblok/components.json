      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "blog_category",
      "display_name": "Blog Category",
      "schema": {
        "name": { "type": "text", "required": true },
        "slug": { "type": "text", "required": true },
        "description": { "type": "textarea" }
      },
      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "faq_page",
      "display_name": "FAQ Page",
      "schema": {
        "location_name": { "type": "text", "required": true },
        "camp_reference": { "type": "option", "source": "internal_stories", "folder_slug": "surfcamp/" },
        "categories": { "type": "bloks", "restrict_components": true, "component_whitelist": ["faq_category"] }
      },
      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "faq_category",
      "display_name": "FAQ Category",
      "schema": {
        "name": { "type": "text", "required": true },
        "questions": { "type": "bloks", "restrict_components": true, "component_whitelist": ["faq_item"] }
      },
      "is_root": false,
      "is_nestable": true
    },
    {
      "name": "faq_item",
      "display_name": "FAQ Item",
      "schema": {
        "question": { "type": "text", "required": true },
        "answer": { "type": "richtext" }
      },
      "is_root": false,
      "is_nestable": true
    },
    {
      "name": "inclusion",
      "display_name": "Booking Inclusion",
      "schema": {
        "title": { "type": "text", "required": true },
        "description": { "type": "text" },
        "icon": { "type": "text" }

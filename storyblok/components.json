{
  "components": [
    {
      "name": "page",
      "display_name": "Page",
      "schema": {
        "title": { "type": "text", "required": true },
        "description": { "type": "textarea" },
        "hero_image": { "type": "asset", "filetypes": ["images"] },
        "hero_tagline": { "type": "text" },
        "body": { "type": "bloks", "restrict_components": false }
      },
      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "country_page",
      "display_name": "Country Page",
      "schema": {
        "name": { "type": "text", "required": true },
        "slug": { "type": "text", "required": true },
        "tagline": { "type": "text" },
        "description": { "type": "richtext" },
        "hero_image": { "type": "asset", "filetypes": ["images"] },
        "seo_title": { "type": "text" },
        "seo_description": { "type": "textarea" },
        "body": { "type": "bloks" }
      },
      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "camp_page",
      "display_name": "Camp Page",
      "schema": {
        "name": { "type": "text", "required": true },
        "country": { "type": "option", "source": "internal_stories", "folder_slug": "surfcamp/" },
        "location": { "type": "text" },
        "tagline": { "type": "text" },
        "description": { "type": "richtext" },
        "hero_image": { "type": "asset", "filetypes": ["images"] },
        "card_image": { "type": "asset", "filetypes": ["images"] },
        "gallery": { "type": "multi-asset", "filetypes": ["images"] },
        "booking_url": { "type": "text" },
        "inclusions": { "type": "bloks", "restrict_components": true, "component_whitelist": ["inclusion"] },
        "highlights": { "type": "bloks", "restrict_components": true, "component_whitelist": ["text_section"] },
        "faqs": { "type": "bloks", "restrict_components": true, "component_whitelist": ["faq_item"] },
        "seo_title": { "type": "text" },
        "seo_description": { "type": "textarea" }
      },
      "is_root": true,
      "is_nestable": false
    },
    {
      "name": "blog_post",
      "display_name": "Blog Post",
      "schema": {
        "title": { "type": "text", "required": true },
        "slug": { "type": "text" },
        "excerpt": { "type": "textarea" },
        "content": { "type": "richtext" },
        "featured_image": { "type": "asset", "filetypes": ["images"] },
        "categories": { "type": "multi-option", "source": "internal_stories", "folder_slug": "blog/categories/" },

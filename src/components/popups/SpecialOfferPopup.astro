---
/**
 * Special Offer Popup — highest priority
 * Shows a promotional offer with optional image, countdown timer, and CTA.
 * Fields can be made CMS-editable via Sanity.
 */

interface Props {
  headline?: string;
  body?: string;
  ctaText?: string;
  ctaHref?: string;
  image?: string;
  voucherCode?: string;
  /** ISO date string for countdown (e.g. "2026-03-15T23:59:59") — omit to hide timer */
  expiresAt?: string;
}

const {
  headline = "Limited-Time Offer",
  body = "Book any surf camp this week and save 20%. Don't miss out on the adventure of a lifetime.",
  ctaText = "Claim This Offer",
  ctaHref = "/surfcamp",
  image,
  voucherCode,
  expiresAt,
} = Astro.props;
---

<!-- Special Offer Popup -->
<div
  id="popup-special-offer"
  class="fixed inset-0 z-[60] hidden items-center justify-center bg-black/60 backdrop-blur-sm"
  role="dialog"
  aria-modal="true"
  aria-label="Special offer"
  data-expires={expiresAt || ""}
>
  <div class="popup-card relative mx-4 w-full max-w-md scale-95 opacity-0 transition-all duration-300 ease-out rounded-2xl overflow-hidden shadow-2xl">
    <!-- Gradient border accent -->
    <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-brand-blue via-ocean to-ocean-light p-[2px]">
      <div class="h-full w-full rounded-[14px] bg-white" />
    </div>

    <div class="relative z-10">
      {image && (
        <div class="relative h-40 overflow-hidden">
          <img src={image} alt="" class="h-full w-full object-cover" loading="lazy" />
          <div class="absolute inset-0 bg-gradient-to-t from-white via-white/30 to-transparent" />
        </div>
      )}

      <div class:list={["p-8 sm:p-10 text-center", image && "-mt-6"]}>
        <!-- Close button -->
        <button
          class="popup-close absolute top-4 right-4 z-20 flex h-8 w-8 items-center justify-center rounded-full text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors"
          aria-label="Close"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>

        {!image && (
          <div class="mx-auto mb-5 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-brand-blue to-ocean">
            <svg class="h-8 w-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
        )}

        <h3 class="text-2xl font-bold text-gray-900 mb-2">{headline}</h3>
        <p class="text-gray-500 text-sm leading-relaxed mb-6">{body}</p>

        {/* Countdown timer */}
        {expiresAt && (
          <div id="offer-countdown" class="mb-6 flex items-center justify-center gap-3">
            <div class="text-center">
              <span id="offer-cd-days" class="block text-2xl font-bold text-gray-900">00</span>
              <span class="text-[10px] uppercase tracking-wider text-gray-400">Days</span>
            </div>
            <span class="text-gray-300 text-xl font-light">:</span>
            <div class="text-center">
              <span id="offer-cd-hours" class="block text-2xl font-bold text-gray-900">00</span>
              <span class="text-[10px] uppercase tracking-wider text-gray-400">Hours</span>
            </div>
            <span class="text-gray-300 text-xl font-light">:</span>
            <div class="text-center">
              <span id="offer-cd-mins" class="block text-2xl font-bold text-gray-900">00</span>
              <span class="text-[10px] uppercase tracking-wider text-gray-400">Min</span>
            </div>
            <span class="text-gray-300 text-xl font-light">:</span>
            <div class="text-center">
              <span id="offer-cd-secs" class="block text-2xl font-bold text-gray-900">00</span>
              <span class="text-[10px] uppercase tracking-wider text-gray-400">Sec</span>
            </div>
          </div>
        )}

        {/* Voucher code */}
        {voucherCode && (
          <div class="mx-auto mb-6 max-w-xs">
            <div class="offer-voucher flex items-center justify-between rounded-xl border-2 border-dashed border-brand-blue/30 bg-brand-blue/5 px-5 py-3.5">
              <span class="offer-code text-lg font-bold tracking-widest text-brand-blue">{voucherCode}</span>
              <button
                class="offer-copy ml-3 flex items-center gap-1.5 rounded-lg bg-brand-blue px-3 py-1.5 text-xs font-semibold text-white hover:bg-ocean transition-colors"
              >
                <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
                <span class="offer-copy-label">Copy</span>
              </button>
            </div>
          </div>
        )}

        <a
          href={ctaHref}
          class="popup-close inline-block rounded-full bg-brand-blue px-8 py-3 text-sm font-semibold text-white hover:bg-ocean transition-colors"
        >
          {ctaText}
        </a>

        <p class="mt-3 text-xs text-gray-400">
          <button class="popup-close underline hover:text-gray-500 transition-colors">No thanks</button>
        </p>
      </div>
    </div>
  </div>
</div>

<script is:inline>
(function () {
  var popup = document.getElementById("popup-special-offer");
  if (!popup) return;

  var card = popup.querySelector(".popup-card");
  var copyBtn = popup.querySelector(".offer-copy");
  var codeEl = popup.querySelector(".offer-code");
  var copyLabel = popup.querySelector(".offer-copy-label");
  var expiresAt = popup.getAttribute("data-expires");

  function show() {
    popup.classList.remove("hidden");
    popup.classList.add("flex");
    document.body.style.overflow = "hidden";
    requestAnimationFrame(function () {
      requestAnimationFrame(function () {
        card.classList.remove("scale-95", "opacity-0");
        card.classList.add("scale-100", "opacity-100");
      });
    });

    if (expiresAt) startCountdown();
  }

  function hide() {
    card.classList.remove("scale-100", "opacity-100");
    card.classList.add("scale-95", "opacity-0");
    if (countdownTimer) clearInterval(countdownTimer);
    setTimeout(function () {
      popup.classList.add("hidden");
      popup.classList.remove("flex");
      document.body.style.overflow = "";
    }, 300);
  }

  popup.querySelectorAll(".popup-close").forEach(function (el) {
    el.addEventListener("click", function (e) {
      if (el.tagName === "BUTTON") e.preventDefault();
      hide();
    });
  });

  popup.addEventListener("click", function (e) {
    if (e.target === popup) hide();
  });

  document.addEventListener("keydown", function (e) {
    if (e.key === "Escape" && !popup.classList.contains("hidden")) hide();
  });

  // Countdown timer
  var countdownTimer = null;
  function startCountdown() {
    var target = new Date(expiresAt).getTime();
    var daysEl = document.getElementById("offer-cd-days");
    var hoursEl = document.getElementById("offer-cd-hours");
    var minsEl = document.getElementById("offer-cd-mins");
    var secsEl = document.getElementById("offer-cd-secs");
    if (!daysEl) return;

    function update() {
      var now = Date.now();
      var diff = Math.max(0, target - now);
      var d = Math.floor(diff / 86400000);
      var h = Math.floor((diff % 86400000) / 3600000);
      var m = Math.floor((diff % 3600000) / 60000);
      var s = Math.floor((diff % 60000) / 1000);
      daysEl.textContent = String(d).padStart(2, "0");
      hoursEl.textContent = String(h).padStart(2, "0");
      minsEl.textContent = String(m).padStart(2, "0");
      secsEl.textContent = String(s).padStart(2, "0");
      if (diff <= 0 && countdownTimer) clearInterval(countdownTimer);
    }

    update();
    countdownTimer = setInterval(update, 1000);
  }

  // Copy voucher
  if (copyBtn && codeEl) {
    copyBtn.addEventListener("click", function (e) {
      e.preventDefault();
      e.stopPropagation();
      var code = codeEl.textContent.trim();
      navigator.clipboard.writeText(code).then(function () {
        copyLabel.textContent = "Copied!";
        setTimeout(function () { copyLabel.textContent = "Copy"; }, 2000);
      });
    });
  }

  window.addEventListener("rc:show-popup", function (e) {
    if (e.detail && e.detail.type === "special-offer") show();
  });
})();
</script>

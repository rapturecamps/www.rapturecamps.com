---
const stats = [
  { label: "Established", value: "2003" },
  { label: "Happy Customers", value: "80k+" },
  { label: "TripAdvisor Awards", value: "23" },
  { label: "Destinations", value: "8" },
];
---

<section class="pt-12 sm:pt-20 pb-16 sm:pb-20">
  <div class="px-6 sm:px-12 lg:px-20">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
      {stats.map((stat) => (
        <div class="rounded-2xl bg-white/[0.03] border border-white/[0.06] px-6 py-8 sm:px-8 sm:py-10 text-center">
          <p class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight leading-none text-white">
            {stat.value}
          </p>
          <p class="mt-3 text-xs sm:text-sm text-white/40">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>

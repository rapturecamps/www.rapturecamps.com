---
interface Props {
  heading: string;
  body: string;
  image?: string;
  imageAlt?: string;
  reverse?: boolean;
  background?: "dark" | "dark-lighter";
}

const {
  heading,
  body,
  image,
  imageAlt = "",
  reverse = false,
  background = "dark",
} = Astro.props;

const bgClass = background === "dark-lighter" ? "bg-dark-lighter" : "bg-dark";
---

<section class:list={["py-16 sm:py-20", bgClass]}>
  <div class="px-6 sm:px-12 lg:px-20">
    {image ? (
      <div class:list={[
        "grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center",
        reverse && "direction-rtl"
      ]}>
        <div class:list={[reverse && "lg:order-2"]}>
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-white mb-6">{heading}</h2>
          <div class="text-base text-white/50 leading-relaxed space-y-4" set:html={body} />
        </div>
        <div class:list={[reverse && "lg:order-1"]}>
          <div class="aspect-[4/3] overflow-hidden rounded-xl">
            <img src={image} alt={imageAlt} class="h-full w-full object-cover" loading="lazy" />
          </div>
        </div>
      </div>
    ) : (
      <div class="max-w-3xl">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-white mb-6">{heading}</h2>
        <div class="text-base text-white/50 leading-relaxed space-y-4" set:html={body} />
      </div>
    )}
  </div>
</section>

---
interface Props {
  block: any;
}

const { block } = Astro.props;
const heading = block.heading || "What's Included";
const items = block.items || [];
---

{items.length > 0 && (
  <section class="py-16 sm:py-20 bg-dark-lighter">
    <div class="px-6 sm:px-12 lg:px-20">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-white mb-10">{heading}</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
        {items.map((item: any) => {
          const iconUrl = item.resolvedIconImageUrl;
          return (
            <div class="flex flex-col items-center text-center p-5 rounded-xl bg-dark border border-white/5">
              {(iconUrl || item.icon) && (
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-ocean-light/10 text-ocean-light mb-3">
                  {iconUrl ? (
                    <img src={iconUrl} alt="" class="h-5 w-5" loading="lazy" />
                  ) : (
                    <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d={item.icon} />
                    </svg>
                  )}
                </div>
              )}
              {item.label && <h3 class="text-xs font-semibold text-white">{item.label}</h3>}
            </div>
          );
        })}
      </div>
    </div>
  </section>
)}

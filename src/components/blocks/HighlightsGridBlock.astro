---
interface Props {
  block: {
    heading?: string;
    items?: {
      icon?: string;
      label?: string;
      description?: string;
    }[];
  };
}

const { block } = Astro.props;
const heading = block.heading || "Highlights";
const items = block.items || [];
---

{items.length > 0 && (
  <section class="py-16 sm:py-20 bg-dark">
    <div class="px-6 sm:px-12 lg:px-20">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-white mb-10">{heading}</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {items.map((item) => (
          <div class="p-6 rounded-xl bg-dark-lighter border border-white/5">
            {item.icon && (
              <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/5 text-ocean-light mb-4">
                <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d={item.icon} />
                </svg>
              </div>
            )}
            {item.label && <h3 class="text-base font-semibold text-white mb-2">{item.label}</h3>}
            {item.description && <p class="text-sm text-white/40 leading-relaxed">{item.description}</p>}
          </div>
        ))}
      </div>
    </div>
  </section>
)}

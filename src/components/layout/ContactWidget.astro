---
const channels = [
  {
    name: "WhatsApp",
    description: "We typically reply within a day",
    href: "https://wa.me/447700177360",
    icon: "whatsapp",
    external: true,
  },
  {
    name: "Telegram",
    description: "We typically reply within a day",
    href: "https://t.me/rapturecampsbot",
    icon: "telegram",
    external: true,
  },
  {
    name: "Chat",
    description: "We typically reply within a day",
    href: "#",
    icon: "chat",
    action: "openChat",
  },
  {
    name: "Email",
    description: "We typically reply within a day",
    href: "/contact",
    icon: "email",
  },
];
---

<!-- Contact Widget -->
<div id="contact-widget" class="fixed bottom-6 right-6 z-50">
  <!-- Panel -->
  <div id="contact-panel" class="hidden absolute bottom-16 right-0 w-[320px] sm:w-[360px] rounded-2xl bg-white shadow-2xl shadow-black/30 overflow-hidden">
    <!-- Header -->
    <div class="relative h-[180px] overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-brand-blue via-ocean to-ocean-light" />
      <div class="relative z-10 flex flex-col h-full p-6">
        <!-- Team faces -->
        <div class="flex items-center -space-x-2 mb-auto">
          <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=80&h=80&fit=crop&crop=face" alt="Team member" class="h-10 w-10 rounded-full border-2 border-white/30 object-cover" />
          <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=80&h=80&fit=crop&crop=face" alt="Team member" class="h-10 w-10 rounded-full border-2 border-white/30 object-cover" />
          <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=80&h=80&fit=crop&crop=face" alt="Team member" class="h-10 w-10 rounded-full border-2 border-white/30 object-cover" />
        </div>
        <p class="text-white/60 text-lg font-light">Hello there</p>
        <p class="text-white text-2xl font-bold">How can we help?</p>
      </div>
    </div>

    <!-- Channel list -->
    <div class="p-3 space-y-2">
      {channels.map((ch) => (
        <a
          href={ch.href}
          target={ch.external ? "_blank" : undefined}
          rel={ch.external ? "noopener noreferrer" : undefined}
          data-action={ch.action || undefined}
          class="contact-channel flex items-center gap-4 rounded-xl border border-gray-100 p-4 hover:bg-gray-50 transition-colors"
        >
          <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-dark text-white">

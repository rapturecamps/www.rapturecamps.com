          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-semibold text-gray-900">{ch.name}</p>
            <div class="flex items-center gap-1.5 mt-1">
              <span class="relative flex h-2 w-2 flex-shrink-0">
                <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex h-2 w-2 rounded-full bg-green-500"></span>
              </span>
              <span class="channel-queue text-[11px] text-gray-400" data-channel={ch.icon}>{ch.description}</span>
            </div>
          </div>
          <svg class="h-5 w-5 flex-shrink-0 text-brand-blue" viewBox="0 0 24 24" fill="currentColor"><path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/></svg>
        </a>
      ))}
    </div>
  </div>

  <!-- Toggle button -->
  <button
    id="contact-toggle"
    class="flex h-14 w-14 items-center justify-center rounded-full bg-brand-blue text-white shadow-lg shadow-brand-blue/30 hover:bg-ocean transition-colors"
    aria-label="Contact us"
  >
    <svg id="contact-icon-open" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
    <svg id="contact-icon-close" class="h-6 w-6 hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
  </button>
</div>

<script is:inline>
  (function () {
    /* --- Social proof queue numbers --- */
    var SK = "rc_contact_queue";
    var stored = null;
    try { stored = JSON.parse(sessionStorage.getItem(SK)); } catch(e) {}

    function genQueue() {
      var hour = new Date().getHours();
      // Busier during 9-18, quieter at night
      var busy = (hour >= 9 && hour <= 18) ? 1 : (hour >= 7 && hour <= 21) ? 0.6 : 0.3;
      function r(min, max) { return Math.round(min + Math.random() * (max - min) * busy); }
      return {
        whatsapp: r(3, 14),
        telegram: r(1, 8),
        chat: r(2, 11),
        email: r(4, 18),
        ts: Date.now()
      };
    }

    if (!stored || (Date.now() - stored.ts > 300000)) {
      stored = genQueue();
      try { sessionStorage.setItem(SK, JSON.stringify(stored)); } catch(e) {}
    }

    var labels = {
      whatsapp: " people chatting now",
      telegram: " people chatting now",
      chat: " in queue right now",
      email: " inquiries today"
    };

    document.querySelectorAll(".channel-queue").forEach(function (el) {
      var ch = el.getAttribute("data-channel");
      if (ch && stored[ch] !== undefined) {
        el.textContent = stored[ch] + (labels[ch] || " active now");
      }
    });

    // Slowly tick up 1-2 channels every ~60s to feel alive
    setInterval(function () {
      var keys = ["whatsapp", "telegram", "chat", "email"];
      var pick = keys[Math.floor(Math.random() * keys.length)];
      stored[pick] = Math.min(stored[pick] + 1, 25);
      stored.ts = Date.now();
      try { sessionStorage.setItem(SK, JSON.stringify(stored)); } catch(e) {}
      var el = document.querySelector('.channel-queue[data-channel="' + pick + '"]');
      if (el) el.textContent = stored[pick] + (labels[pick] || " active now");
    }, 55000 + Math.random() * 20000);

    /* --- Toggle panel --- */
    var toggle = document.getElementById("contact-toggle");
    var panel = document.getElementById("contact-panel");
    var iconOpen = document.getElementById("contact-icon-open");
    var iconClose = document.getElementById("contact-icon-close");

    if (!toggle || !panel) return;

    toggle.addEventListener("click", function () {
      var isOpen = !panel.classList.contains("hidden");
      if (isOpen) {
        panel.classList.add("hidden");
        iconOpen.classList.remove("hidden");
        iconClose.classList.add("hidden");
      } else {
        panel.classList.remove("hidden");
        iconOpen.classList.add("hidden");
        iconClose.classList.remove("hidden");
      }
    });

    document.addEventListener("click", function (e) {
      var widget = document.getElementById("contact-widget");
      if (widget && !widget.contains(e.target)) {
        panel.classList.add("hidden");
        iconOpen.classList.remove("hidden");
        iconClose.classList.add("hidden");
      }
    });

    // Zoho Desk chat close button
    var closeBtn = document.createElement("button");
    closeBtn.id = "zoho-chat-close";
    closeBtn.setAttribute("aria-label", "Close chat");
    closeBtn.style.cssText = "display:none;position:fixed;bottom:24px;right:24px;z-index:999999;width:56px;height:56px;border-radius:50%;background:#005AFF;color:#fff;border:none;cursor:pointer;box-shadow:0 4px 12px rgba(0,90,255,0.3);align-items:center;justify-content:center;";
    closeBtn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>';
    document.body.appendChild(closeBtn);

    closeBtn.addEventListener("click", function () {
      if (window.ZohoDeskAsap) {
        ZohoDeskAsap.invoke("close");
      }
      closeBtn.style.display = "none";
    });

    var chatLinks = document.querySelectorAll('[data-action="openChat"]');
    chatLinks.forEach(function (link) {
      link.addEventListener("click", function (e) {
        e.preventDefault();
        panel.classList.add("hidden");
        iconOpen.classList.remove("hidden");
        iconClose.classList.add("hidden");
        if (window.ZohoDeskAsap) {
          ZohoDeskAsap.invoke("open");
          closeBtn.style.display = "flex";
        }
      });
    });
  })();
</script>


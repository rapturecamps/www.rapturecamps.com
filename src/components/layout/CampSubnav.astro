---
interface Props {
  campName: string;
  basePath: string;
  activePage: "overview" | "surf" | "rooms" | "food";
  bookingUrl: string;
}

const { campName, basePath, activePage, bookingUrl } = Astro.props;

const tabs = [
  { id: "overview", label: "The Surfcamp", href: basePath },
  { id: "surf", label: "Surf", href: `${basePath}/surf` },
  { id: "rooms", label: "Rooms", href: `${basePath}/rooms` },
  { id: "food", label: "Food", href: `${basePath}/food` },
] as const;
---

<nav id="camp-subnav" class="camp-subnav sticky z-40 bg-dark/95 backdrop-blur-md border-b border-white/5">
  <div class="mx-auto w-full px-6 sm:px-12 lg:px-20">
    <div class="flex h-12 items-center justify-between">
      {tabs.map((tab, i) => (
        <a
          href={tab.href}
          class:list={[
            "camp-tab relative whitespace-nowrap py-2 text-xs sm:text-sm transition-colors",
            activePage === tab.id
              ? "text-white font-medium"
              : "text-white/40 hover:text-white/70",
          ]}
          data-active={activePage === tab.id ? "true" : undefined}
        >
          {tab.label}
          {activePage === tab.id && (
            <span class="absolute bottom-0 left-0 right-0 h-0.5 bg-ocean-light rounded-full" />
          )}
        </a>
      ))}

      <a
        href={bookingUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="book-link flex-shrink-0 rounded-full bg-white px-4 sm:px-5 py-1.5 text-xs font-semibold text-brand-blue hover:bg-white/90 transition-colors"
      >
        <span class="sm:hidden">Book</span>
        <span class="hidden sm:inline">Book Now</span>
      </a>
    </div>
  </div>
</nav>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>

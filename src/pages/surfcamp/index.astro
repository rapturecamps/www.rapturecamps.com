---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import { countries } from "@/lib/data";
---

<BaseLayout
  title="Surf Camps Worldwide | Rapture Surfcamps"
  description="Choose your surf camp destination. Rapture Surfcamps operates in Bali, Costa Rica, Portugal, Morocco, and Nicaragua."
>
  <Hero
    title="Choose Your Destination"
    subtitle="From tropical Bali to the Atlantic coast of Portugal â€” find your surf camp."
    backgroundImage="https://images.unsplash.com/photo-1544551763-46a013bb70d5?w=1920&h=1080&fit=crop"
  />

  <section class="py-20 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {countries.map((country) => (
          <a href={`/surfcamp/${country.slug}`} class="group relative aspect-[3/4] overflow-hidden rounded-xl">
            <img src="https://images.unsplash.com/photo-1537519646099-2b3c3e647e70?w=600&h=800&fit=crop" alt={`Surf camp in ${country.name}`} class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <span class="text-3xl mb-2 block">{country.flag}</span>
              <h2 class="text-2xl font-bold text-white">{country.name}</h2>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

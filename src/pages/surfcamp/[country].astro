  <section class="py-16 sm:py-20 bg-dark">
    <div class="px-6 sm:px-12 lg:px-20">
      <p class="text-base sm:text-lg text-white/50 max-w-3xl leading-relaxed mb-16">{data.intro}</p>

      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-white mb-10">{data.campsSectionTitle}</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {countryCamps.map((camp) => (
          <a href={camp.slug} class="group overflow-hidden rounded-2xl bg-dark-lighter border border-white/5 transition-all hover:border-white/15">
            <div class="relative aspect-[16/10] overflow-hidden">
              <img src={camp.image} alt={`${camp.name} surf camp`} class="absolute inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" />
              {camp.rating && (
                <div class="absolute top-4 left-4 flex items-center gap-1.5 bg-black/50 backdrop-blur-sm rounded-full px-3 py-1.5">
                  <svg class="h-3.5 w-3.5 text-amber-400" viewBox="0 0 20 20" fill="currentColor"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
                  <span class="text-white text-xs font-semibold">{camp.rating}</span>
                  {camp.reviewCount && <span class="text-white/50 text-[11px]">({camp.reviewCount})</span>}
                </div>
              )}
            </div>
            <div class="p-6">
              <p class="text-[11px] uppercase tracking-wider text-white/30 mb-1">{camp.location}</p>
              <h3 class="text-xl font-semibold text-white group-hover:text-ocean-light transition-colors">{camp.name}</h3>
              {camp.tagline && <p class="text-sm text-white/45 mt-1.5 leading-snug">{camp.tagline}</p>}

              {camp.amenities && camp.amenities.length > 0 && (
                <div class="mt-4 flex flex-wrap gap-2">
                  {camp.amenities.map((amenity) => (
                    <span class="inline-flex items-center gap-1.5 text-[11px] text-white/40 bg-white/5 rounded-full px-2.5 py-1">
                      {amenity === "pool" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 6c.6.5 1.2 1 2.5 1C7 7 7 5 9.5 5c2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/><path d="M2 12c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/><path d="M2 18c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/></svg>}
                      {amenity === "surf-lessons" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 0 0-16 0"/></svg>}
                      {amenity === "yoga" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="4" r="1.5"/><path d="M7 21l3-7"/><path d="M17 21l-3-7"/><path d="m4 16 4-2.5"/><path d="m20 16-4-2.5"/><path d="m9 10.5 3 3 3-3"/></svg>}
                      {amenity === "restaurant" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>}
                      {amenity === "wifi" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h.01"/><path d="M2 8.82a15 15 0 0 1 20 0"/><path d="M5 12.859a10 10 0 0 1 14 0"/><path d="M8.5 16.429a5 5 0 0 1 7 0"/></svg>}
                      {amenity === "bar" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 22h8"/><path d="M12 11v11"/><path d="m19 3-7 8-7-8Z"/></svg>}
                      {amenity === "gym" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.4 14.4 9.6 9.6"/><path d="M18.657 21.485a2 2 0 1 1-2.829-2.828l-1.767-1.768a2 2 0 1 1-2.829-2.829l6.364-6.364a2 2 0 1 1 2.829 2.829l1.767 1.767a2 2 0 1 1 2.828 2.829z"/><path d="m21.5 21.5-1.4-1.4"/><path d="M3.9 3.9 2.5 2.5"/><path d="M6.404 12.768a2 2 0 1 1-2.829-2.829l1.768-1.767a2 2 0 1 1-2.828-2.829l2.828-2.828a2 2 0 1 1 2.829 2.828l1.767-1.768a2 2 0 1 1 2.829 2.829z"/></svg>}
                      {amenity === "bikes" && <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="18.5" cy="17.5" r="3.5"/><circle cx="5.5" cy="17.5" r="3.5"/><circle cx="15" cy="5" r="1"/><path d="M12 17.5V14l-3-3 4-3 2 3h2"/></svg>}
                      {amenityLabels[amenity] || amenity}
                    </span>
                  ))}
                </div>
              )}

              <div class="mt-4 flex items-center gap-2 text-ocean-light text-xs font-medium opacity-0 translate-y-1 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
                <span>View this camp</span>
                <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14" /><path d="m12 5 7 7-7 7" /></svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Image Grid Break -->
  <ImageGrid images={data.imageGrid} variant="collage" />

  <!-- Content Blocks -->
  {data.contentBlocks.map((block) => (
    <ContentBlock
      heading={block.heading}
      body={block.body}
      image={block.image}
      imageAlt={block.imageAlt}
      reverse={block.reverse}
      background={block.background}
    />
  ))}

  <!-- Full-width Image Break -->
  <ImageBreak
    src={data.imageBreak.src}
    alt={data.imageBreak.alt}
    caption={data.imageBreak.caption}
  />

  <!-- Customer Reviews -->
  <Reviews reviews={data.reviews} />

  <!-- CTA -->
  <CTASection />
</BaseLayout>

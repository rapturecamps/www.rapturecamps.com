<BaseLayout
  title={`${data.title.replace("\n", " ")} | Rapture Surfcamps`}
  description={data.description}
>
  <Hero
    title={data.title}
    subtitle={data.tagline}
    backgroundImage={data.heroImage}
    backgroundImages={data.heroImages}
  />


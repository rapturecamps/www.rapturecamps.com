---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

const contactMethods = [
  { label: "WhatsApp", desc: "Quick answers", href: "https://wa.me/+447700177360", icon: "M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z" },
  { label: "Telegram", desc: "Chat with our bot", href: "https://t.me/rapturecampsbot", icon: "m22 2-7 20-4-9-9-4Z M22 2 11 13" },
  { label: "Email", desc: "info@rapturecamps.com", href: "mailto:info@rapturecamps.com", icon: "M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z M22 6l-10 7L2 6" },
  { label: "Free Callback", desc: "Book a time and we call you", href: "#", icon: "M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z" },
];
---

<BaseLayout
  title="Contact Us | Rapture Surfcamps"
  description="Get in touch with Rapture Surfcamps. Ask questions about our surf camps via email, WhatsApp, Telegram, or our contact form."
  ogImage="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=1200&h=630&fit=crop"
>
  <Hero
    title="Get in Touch"
    backgroundImage="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=1920&h=1080&fit=crop"
  >
    <Breadcrumbs inline crumbs={[{ label: "Contact" }]} />
  </Hero>

  <section class="py-20 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <div class="lg:col-span-1 space-y-5">
          <h2 class="text-xl font-semibold text-white">Reach Out To Us</h2>
          <p class="text-sm text-white/40">Choose your preferred way to get in touch. We typically respond within a few hours.</p>
          <div class="space-y-3">
            {contactMethods.map(({ label, desc, href, icon }) => (
              <a
                href={href}
                target={href.startsWith("http") ? "_blank" : undefined}
                rel={href.startsWith("http") ? "noopener noreferrer" : undefined}
                class="flex items-center gap-4 rounded-xl border border-white/10 p-4 transition-all hover:border-white/20 hover:bg-white/5"
              >
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-white/5 text-white/40">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d={icon} />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-white">{label}</p>
                  <p class="text-xs text-white/40">{desc}</p>
                </div>
              </a>
            ))}
          </div>
        </div>

        <div class="lg:col-span-2">
          <div class="rounded-2xl bg-dark-lighter border border-white/5 p-8 md:p-10">
            <h2 class="text-xl font-semibold text-white mb-8">Send Us a Message</h2>
            <form class="space-y-5">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                <div>
                  <label for="name" class="block text-xs font-medium text-white/50 mb-2">Name</label>
                  <input type="text" id="name" name="name" class="w-full rounded-lg border border-white/10 bg-white/5 px-4 py-3 text-sm text-white placeholder-white/20 transition-colors focus:border-ocean focus:ring-1 focus:ring-ocean/50 outline-none" placeholder="Your name" />
                </div>
                <div>
                  <label for="email" class="block text-xs font-medium text-white/50 mb-2">Email</label>
                  <input type="email" id="email" name="email" class="w-full rounded-lg border border-white/10 bg-white/5 px-4 py-3 text-sm text-white placeholder-white/20 transition-colors focus:border-ocean focus:ring-1 focus:ring-ocean/50 outline-none" placeholder="your@email.com" />
                </div>
              </div>
              <div>
                <label for="destination" class="block text-xs font-medium text-white/50 mb-2">Destination</label>
                <select id="destination" name="destination" class="w-full rounded-lg border border-white/10 bg-white/5 px-4 py-3 text-sm text-white transition-colors focus:border-ocean focus:ring-1 focus:ring-ocean/50 outline-none">
                  <option value="" class="bg-dark-lighter">Select a destination</option>
                  <option value="bali-green-bowl" class="bg-dark-lighter">Bali - Green Bowl</option>
                  <option value="bali-padang-padang" class="bg-dark-lighter">Bali - Padang Padang</option>
                  <option value="costa-rica-avellanas" class="bg-dark-lighter">Costa Rica - Avellanas</option>
                  <option value="portugal-ericeira" class="bg-dark-lighter">Portugal - Ericeira</option>
                  <option value="portugal-coxos" class="bg-dark-lighter">Portugal - Coxos Surf Villa</option>
                  <option value="portugal-milfontes" class="bg-dark-lighter">Portugal - Milfontes</option>
                  <option value="morocco-banana-village" class="bg-dark-lighter">Morocco - Banana Village</option>
                  <option value="nicaragua-maderas" class="bg-dark-lighter">Nicaragua - Playa Maderas</option>
                  <option value="nicaragua-resort" class="bg-dark-lighter">Nicaragua - Maderas Surf Resort</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-xs font-medium text-white/50 mb-2">Message</label>
                <textarea id="message" name="message" rows="5" class="w-full rounded-lg border border-white/10 bg-white/5 px-4 py-3 text-sm text-white placeholder-white/20 transition-colors focus:border-ocean focus:ring-1 focus:ring-ocean/50 outline-none resize-none" placeholder="Tell us about your trip plans..."></textarea>
              </div>
              <button type="submit" class="w-full rounded-full bg-ocean px-8 py-3.5 text-sm font-semibold text-white transition-all hover:bg-ocean-light">
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

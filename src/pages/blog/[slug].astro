---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import CTASection from "@/components/sections/CTASection.astro";

export function getStaticPaths() {
  const slugs = [
    "bioluminescence-in-costa-rica",
    "dominical-costa-rica",
    "one-week-in-costa-rica-travel-itinerary",
    "arenal-volcano",
    "jaco-costa-rica",
    "rio-celeste",
  ];
  return slugs.map((slug) => ({ params: { slug } }));
}

const { slug } = Astro.params;
const title = slug!
  .split("-")
  .map((w) => w.charAt(0).toUpperCase() + w.slice(1))
  .join(" ");
---

<BaseLayout
  title={`${title} | Rapture Surfcamps`}
  description={`Read about ${title} on the Rapture Surfcamps blog.`}
  ogImage={`https://www.rapturecamps.com/wp-content/uploads/2025/05/${slug}.jpg`}
>
  <div class="relative h-[55vh] min-h-[400px]">
    <img
      src={`https://www.rapturecamps.com/wp-content/uploads/2025/05/${slug}.jpg`}
      alt={title}
      class="absolute inset-0 h-full w-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/40 to-dark/50" />

    <div class="absolute bottom-0 left-0 right-0 px-6 sm:px-12 lg:px-20 pb-10 sm:pb-14">
      <div class="max-w-3xl">
        <h1 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight">{title}</h1>
        <Breadcrumbs inline crumbs={[
          { label: "Blog", href: "/blog" },
          { label: title },
        ]} />
      </div>
    </div>
  </div>

  <article class="py-12 bg-dark">
    <div class="max-w-3xl px-6 sm:px-12 lg:px-20">
      <div class="text-base text-white/50 leading-relaxed space-y-4">
        <p>
          This blog post content will be loaded from Storyblok once the CMS
          is connected. The WordPress migration script will transfer all
          existing blog posts with their full HTML content, featured images,
          categories, and SEO metadata.
        </p>
      </div>
    </div>
  </article>

  <CTASection />
</BaseLayout>

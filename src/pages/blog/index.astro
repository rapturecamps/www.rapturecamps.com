---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Hero from "@/components/sections/Hero.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

const categories = [
  { name: "All", slug: "" },
  { name: "Bali", slug: "bali" },
  { name: "Costa Rica", slug: "costa-rica" },
  { name: "Portugal", slug: "portugal" },
  { name: "Nicaragua", slug: "nicaragua" },
  { name: "Morocco", slug: "morocco" },
  { name: "Inspiration", slug: "inspiration" },
];

const posts = [
  { slug: "bioluminescence-in-costa-rica", title: "Bioluminescence In Costa Rica", excerpt: "The dazzling phenomenon of bioluminescence has turned Costa Rica's Isla de Cedros into a bucket-list destination.", image: "https://www.rapturecamps.com/wp-content/uploads/2025/05/Bioluminescence-In-Costa-rica.jpg", category: "Costa Rica", date: "May 10, 2025" },
  { slug: "dominical-costa-rica", title: "Dominical, Costa Rica: Surfing, Yoga, And Laid-Back Vibes", excerpt: "Tucked along Costa Rica's Pacific coast, Dominical offers what many surfers consider paradise.", image: "https://www.rapturecamps.com/wp-content/uploads/2025/05/Dominical-costa-rica-surfer.jpg", category: "Inspiration", date: "May 9, 2025" },
  { slug: "one-week-in-costa-rica-travel-itinerary", title: "One Week In Costa Rica: The Perfect Travel Itinerary", excerpt: "Costa Rica packs extraordinary biodiversity and adventure into a relatively small space.", image: "https://www.rapturecamps.com/wp-content/uploads/2025/05/sea-turtle-heading-to-beach.jpg", category: "Costa Rica", date: "May 8, 2025" },
  { slug: "arenal-volcano", title: "How To Hike Arenal Volcano: Best Trails & Tips", excerpt: "The majestic Arenal Volcano rises dramatically from the Costa Rican rainforest.", image: "https://www.rapturecamps.com/wp-content/uploads/2025/05/Arenal-Volcano-View-in-Costa-Rica.jpg", category: "Costa Rica", date: "May 7, 2025" },
  { slug: "jaco-costa-rica", title: "Jaco, Costa Rica: A Surfer's Guide To The Best Waves & Nightlife", excerpt: "Nestled on Costa Rica's Central Pacific coast, Jaco has evolved from a sleepy fishing village.", image: "https://www.rapturecamps.com/wp-content/uploads/2025/05/jaco-costa-rica-beach.jpg", category: "Costa Rica", date: "May 6, 2025" },
  { slug: "rio-celeste", title: "Rio Celeste: The Magical Blue River In Costa Rica", excerpt: "Tucked away in the lush rainforests of northern Costa Rica lies one of nature's most spectacular phenomena.", image: "https://www.rapturecamps.com/wp-content/uploads/2025/05/rio-celeste-blue-river.jpg", category: "Costa Rica", date: "May 5, 2025" },
];
---

<BaseLayout
  title="Blog - Waves for Days | Rapture Surfcamps"
  description="Surf destinations, tips, and travel inspiration from Rapture Surfcamps."
  ogImage="https://images.unsplash.com/photo-1505459668311-8dfac7952bf0?w=1200&h=630&fit=crop"
>
  <Hero
    title="Waves for Days"
    backgroundImage="https://images.unsplash.com/photo-1505459668311-8dfac7952bf0?w=1920&h=1080&fit=crop"
  >
    <Breadcrumbs inline crumbs={[{ label: "Blog" }]} />
  </Hero>

  <section class="py-12 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-2 mb-12 justify-center">
        {categories.map((cat) => (
          <a
            href={cat.slug ? `/blog/category/${cat.slug}` : "/blog"}
            class="rounded-full px-4 py-1.5 text-xs font-medium transition-colors border border-white/10 text-white/50 hover:bg-white/10 hover:text-white"
          >
            {cat.name}
          </a>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group">
            <article class="overflow-hidden rounded-xl bg-dark-lighter border border-white/5 transition-all hover:border-white/10">
              <div class="relative aspect-[16/10] overflow-hidden">
                <img src={post.image} alt={post.title} class="absolute inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" />
                <div class="absolute top-3 left-3">
                  <span class="rounded-full bg-white/10 backdrop-blur-sm border border-white/10 px-2.5 py-0.5 text-[10px] font-medium text-white/80">{post.category}</span>
                </div>
              </div>
              <div class="p-5">
                <time class="text-[11px] text-white/30">{post.date}</time>
                <h3 class="mt-1.5 text-base font-semibold text-white line-clamp-2 group-hover:text-ocean-light transition-colors">{post.title}</h3>
                <p class="mt-2 text-xs text-white/40 line-clamp-2">{post.excerpt}</p>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

export function getStaticPaths() {
  const categories = ["bali", "costa-rica", "portugal", "nicaragua", "morocco", "inspiration"];
  return categories.map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const title = category!
  .split("-")
  .map((w) => w.charAt(0).toUpperCase() + w.slice(1))
  .join(" ");
---

<BaseLayout
  title={`${title} - Blog | Rapture Surfcamps`}
  description={`All blog posts about ${title}.`}
>
  <div class="pt-32 pb-12 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h1 class="font-display text-4xl md:text-5xl font-bold text-white">{title}</h1>
      <p class="mt-3 text-base text-white/40">All posts about {title} from the Rapture Surfcamps blog.</p>
      <Breadcrumbs inline crumbs={[
        { label: "Blog", href: "/blog" },
        { label: title },
      ]} />
    </div>
  </div>

  <section class="py-12 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm text-white/30">Blog posts will load from Sanity once content is migrated.</p>
    </div>
  </section>
</BaseLayout>

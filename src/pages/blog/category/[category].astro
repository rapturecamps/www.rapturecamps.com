---
import BaseLayout from "@/layouts/BaseLayout.astro";

export function getStaticPaths() {
  const categories = ["bali", "costa-rica", "portugal", "nicaragua", "morocco", "inspiration"];
  return categories.map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const title = category!
  .split("-")
  .map((w) => w.charAt(0).toUpperCase() + w.slice(1))
  .join(" ");
---

<BaseLayout
  title={`${title} - Blog | Rapture Surfcamps`}
  description={`All blog posts about ${title}.`}
>
  <div class="pt-32 pb-12 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <a href="/blog" class="inline-flex items-center gap-2 text-xs text-white/30 hover:text-white/60 mb-6 transition-colors">
        <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7" /><path d="M19 12H5" /></svg>
        All Posts
      </a>
      <h1 class="font-display text-4xl md:text-5xl font-bold text-white">{title}</h1>
      <p class="mt-3 text-base text-white/40">All posts about {title} from the Rapture Surfcamps blog.</p>
    </div>
  </div>

  <section class="py-12 bg-dark">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm text-white/30">Blog posts will load from Storyblok once connected.</p>
    </div>
  </section>
</BaseLayout>

---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { destinations } from "@/lib/data";
---

<BaseLayout
  title="FAQ | Rapture Surfcamps"
  description="Frequently asked questions about Rapture Surfcamps. Find answers about booking, surfing lessons, rooms, food, and more."
>
  <div class="pt-32 pb-16 bg-dark">
    <div class="px-6 sm:px-12 lg:px-20">
      <h1 class="font-display text-4xl sm:text-5xl font-bold text-white">Frequently Asked Questions</h1>
      <p class="mt-4 text-base sm:text-lg text-white/50 max-w-2xl">Select your camp to find answers about booking, surf lessons, rooms, food, and everything else you need to know.</p>
    </div>
  </div>

  <section class="pb-16 sm:pb-20 bg-dark">
    <div class="px-6 sm:px-12 lg:px-20">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 sm:gap-6">
        {destinations.map((camp) => {
          const faqSlug = camp.slug.split("/").pop();
          return (
            <a
              href={`/faq/${faqSlug}`}
              class="group relative aspect-[16/10] overflow-hidden rounded-2xl"
            >
              <img
                src={camp.image}
                alt={`FAQ for ${camp.name}`}
                class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
              <div class="absolute bottom-0 left-0 right-0 p-5 sm:p-6">
                <p class="text-xs uppercase tracking-wider text-white/50 mb-1">{camp.country} â€” {camp.location}</p>
                <h2 class="text-lg sm:text-xl font-semibold text-white">{camp.name}</h2>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>
</BaseLayout>
